</br>
        <h4>Add Transaction/Holding</h4>

</br>


        <div class="addTransactionForm">
          <form action="/piggybank/<%=user.id%>/portfolio" method="post">
            <div class="form-group">
              <input type="text" name="symbol" class="form-control" placeholder="Enter Symbol You Want To Track">
            </div>
            <div class="form-group">
              <input type="number" name="cost" step="any" min="0" class="form-control" placeholder="Enter Cost">
            </div>
            <div class="form-group">
              <input type="number" name="numOfHoldings" step="0.01" min="0" class="form-control" placeholder="Enter Number of Coins">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>


    </div>
  </body>
